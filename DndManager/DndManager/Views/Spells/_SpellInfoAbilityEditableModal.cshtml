@model SpellInfoAndAbilitiesVM

<div class="modal fade" id="editSpellAbilityModal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"> Change spells ability </h5>
            </div>
            <div class="modal-body">
                <form asp-action="EditAbility" asp-controller="Spells" asp-route-id="@Model.SpellInfo.Id" method="post">
                    <input asp-for="@Model.SpellInfo.Id" type="hidden" />

                    <select asp-for="@Model.SpellInfo.AbilityId" maxlength="100" class="form-control">
                        <option value=""> Non-magical character </option>
                        @foreach (var ab in Model.Abilities)
                        {
                            <option value="@ab.Id">@ab.Name</option>
                        }
                    </select>

                    <div class="modal-footer justify-content-between align-content-center mt-3">
                        <button class="btn btn-primary m-0" type="submit" id="submit"><i class="fas fa-check"></i></button>
                        <button type="button" class="btn btn-primary m-0" data-dismiss="modal"><i class="fas fa-times"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}