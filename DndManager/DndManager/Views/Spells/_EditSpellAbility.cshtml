@model SpellInfoAndAbilitiesVM

<div class="modal fade" id="editSpellAbilityModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Spell Ability</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form asp-action="EditAbility" asp-controller="Spells">
                    <input asp-for="@Model.SpellInfo.Id" type="hidden" />
                    <input asp-for="@Model.SpellInfo.PcId" type="hidden" />
                   
                    <select asp-for="@Model.SpellInfo.AbilityId" maxlength="100" class="form-control">
                        @foreach (var ab in Model.Abilities)
                        {
                            <option value="@ab.Id">@ab.Name</option>
                        }
                    </select>

                    <div class="modal-footer justify-content-center align-content-between">
                        <div class="button form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>