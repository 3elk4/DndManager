@model PcDetailsVM

@{
    ViewData["Title"] = Model.Name;
}
<script type="text/javascript" src="~/js/editpc.js"></script>

<div class="container-fluid">
    <div class="row align-items-center mb-3">
        <div class="col-4 d-flex justify-content-start">
            <a class="btn btn-primary btn-md" role="button" asp-area="" asp-controller="Pcs" asp-action="Index">
                <i class="fas fa-arrow-left"></i>
            </a>
        </div>
        <div class="col-8 justify-content-between">
            <div class="row d-flex justify-content-between align-content-center">
                <a class="btn btn-primary m-0" type="button" href="/dndclasses/show/@Model.Id"> DndClasses </a>
                <a class="btn btn-primary m-0" type="button" href="/items/show/@Model.Id"> Items  </a>
                <a class="btn btn-primary m-0" type="button" href="/feats/show/@Model.Id"> Feats</a>
                <a class="btn btn-primary m-0" type="button" href="/proficiencies/show/@Model.Id"> Proficiencies </a>
                <a class="btn btn-primary m-0" type="button" href="/spells/show/@Model.Id"> Spells </a>
                <a class="btn btn-primary m-0" type="button" href="/combatactions/show/@Model.Id"> Actions </a>
                <a class="btn btn-primary m-0" type="button" href="/bio/show/@Model.Bio.Id"> Bio </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="card box-shadow">
                <div class="card-header"> <h5> @Model.Name </h5></div>
                <img class="card-img-top" src="@Model.Image" />
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p class="font-weight-bold">Race: </p> <p>@Model.RaceName</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p class="font-weight-bold">Background: </p> <p>@Model.BackgroundName</p>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <p class="font-weight-bold" style="margin-right:20px;">Classes: </p>

                            <ul class="list-group list-group-flush">
                                @if (Model.DndClasses != null)
                                {
                                    foreach (var dndClass in Model.DndClasses)
                                    {
                                        if (dndClass.Name == null || dndClass.Name.Length == 0) continue;
                                        var title = dndClass.SubclassName.Length != 0 ? $"{dndClass.Name} ({dndClass.SubclassName})" : dndClass.Name;

                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            @title
                                            <span class="badge rounded-pill">@dndClass.Lvl</span>
                                        </li>
                                    }
                                }
                            </ul>

                        </li>

                    </ul>
                </div>
                <div class="card-footer d-flex">
                    <a class="btn btn-primary" onclick="editPcDetails(`/Pcs/Edit/@Model.Id`)">
                        <i class="fas fa-edit"></i>
                    </a>
                    <div id="modalPcDetailsWrapper"></div>
                    <form asp-controller="Pcs" asp-action="Delete" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete pc: @Model.Name?')"> <i class="fas fa-times"></i> </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="container text-center box-shadow mb-1 mt-1 pt-1 pb-1">
                <partial name="_PartialShowableAbilities" model="@Model.Abilities" view-data='@new ViewDataDictionary(ViewData){ { "Proficiency", Model.Proficiency } }' />
            </div>
