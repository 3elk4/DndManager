@model PcDetailsVM

<div class="modal fade" id="editPcDetailsModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Pc Details</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <form asp-action="Edit" asp-controller="Pcs" enctype="multipart/form-data">
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    @*<div class="form-group">
                        <label for="Photo"></label>
                        <input asp-for="Photo" type="file" class="form-control-file" id="image_file" accept=".png, .jpeg, .jpg">
                    </div>*@
                    <div class="form-group">
                        <label asp-for="RaceName" class="control-label"> Race </label>
                        <input type="text" asp-for="RaceName" class="form-control" />
                        <span asp-validation-for="RaceName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BackgroundName" class="control-label"> Background </label>
                        <input type="text" asp-for="BackgroundName" class="form-control" />
                        <span asp-validation-for="BackgroundName" class="text-danger"></span>
                    </div>
                    <div class="modal-footer justify-content-center align-content-between">
                        <div class="button form-group">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>