@model NpcFeatVM


<div class="row">
    <input hidden type="text" asp-for="@Model.Id" />
    <input hidden type="text" asp-for="@Model.NpcId" />

    <div class="col">
        <label asp-for="@Model.Name" class="control-label"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.TimeRegeneration" class="control-label"></label>
        <input asp-for="@Model.TimeRegeneration" class="form-control" />
        <span asp-validation-for="@Model.TimeRegeneration" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Description" class="control-label"></label>
        <input asp-for="@Model.Description" class="form-control" />
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
</div>
