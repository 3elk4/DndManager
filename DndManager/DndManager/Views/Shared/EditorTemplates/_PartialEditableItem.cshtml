@model ItemVM

<div class="row">
    <input hidden type="text" asp-for="@Model.Id" />
    <input hidden type="text" asp-for="@Model.PcId" />

    <div class="col">
        <label asp-for="@Model.Name" class="control-label"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Quantity" class="control-label"></label>
        <input type="number" asp-for="@Model.Quantity" class="form-control" />
        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Weight" class="control-label"></label>
        <input type="number" asp-for="@Model.Weight" class="form-control" min="1" max="20" />
        <span asp-validation-for="@Model.Weight" class="text-danger"></span>
    </div>
</div>

<div class="row">
    <div class="col">
        <label asp-for="@Model.Notes" class="control-label"></label>
        <textarea asp-for="@Model.Notes" class="form-control"></textarea>
        <span asp-validation-for="@Model.Notes" class="text-danger"></span>
    </div>
</div>
