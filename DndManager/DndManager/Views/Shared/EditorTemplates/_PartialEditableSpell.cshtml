@model SpellVM

@{
    var schools = new List<string>() { "abjuration", "conjuration", "divination", "enchantment", "illusion", "invocation", "necromancy" };
}


<div class="row">
    <input hidden type="text" asp-for="@Model.Id" />
    <input hidden type="text" asp-for="@Model.SpellLvlInfoId" />

    <div class="col">
        <label asp-for="@Model.Name" class="control-label"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <label asp-for="@Model.CastingTime" class="control-label"></label>
        <input asp-for="@Model.CastingTime" class="form-control" />
        <span asp-validation-for="@Model.CastingTime" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.CastingRange" class="control-label"> Range </label>
        <input asp-for="@Model.CastingRange" class="form-control" />
        <span asp-validation-for="@Model.CastingRange" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Target" class="control-label"></label>
        <input asp-for="@Model.Target" class="form-control" />
        <span asp-validation-for="@Model.Target" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Components" class="control-label"></label>
        <input asp-for="@Model.Components" class="form-control" />
        <span asp-validation-for="@Model.Components" class="text-danger"></span>
    </div>
</div>
<br />
<div class="row">
    <div class="col">
        <label asp-for="@Model.School" class="control-label"></label>
        <select asp-for="@Model.School" class="form-control">
            @foreach (var s in schools)
            {
                <option value="@s">@s</option>
            }
        </select>
        <span asp-validation-for="@Model.School" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Duration" class="control-label"></label>
        <input asp-for="@Model.Duration" class="form-control" />
        <span asp-validation-for="@Model.Duration" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Concentration" class="control-label"></label>
        <input type="checkbox" asp-for="@Model.Concentration" class="form-control" />
        <span asp-validation-for="@Model.Concentration" class="text-danger"></span>
    </div>
    <div class="col">
        <label asp-for="@Model.Ritual" class="control-label"></label>
        <input type="checkbox" asp-for="@Model.Ritual" class="form-control" />
        <span asp-validation-for="@Model.Ritual" class="text-danger"></span>
    </div>

</div>
<br />
<div class="row">
    <div class="col">
        <label asp-for="@Model.Description" class="control-label"></label>
        <textarea rows="6" style="width:inherit;" asp-for="@Model.Description"> </textarea>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
</div>
<div class="row">
    <div class="col">
        <label asp-for="@Model.HigherLvl" class="control-label"> At Higher Lvl </label>
        <textarea rows="6" style="width:inherit;" asp-for="@Model.HigherLvl"> </textarea>
        <span asp-validation-for="@Model.HigherLvl" class="text-danger"></span>
    </div>
</div>