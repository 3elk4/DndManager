@model NpcAbilityVM

<div class="row">
    <input hidden type="text" asp-for="@Model.Id" />
    <input hidden type="text" asp-for="@Model.NpcId" />
    <div class="col-3">
        <input type="text" asp-for="@Model.Name" readonly class="form-control-plaintext" />
        <span asp-validation-for="@Model.Value" class="text-danger"></span>
    </div>
    <div class="col-3">
        <input type="number" min=1 max=20 asp-for="@Model.Value" class="form-control" />
    </div>
    <div class="col-3">
        <input type="number" asp-for="@Model.SavingThrowBonus" class="form-control" />
    </div>

    @if (Model.Skills != null)
    {
        if (Model.Skills.Count > 0)
        {
            <div class="col-3">
                <a id="expandSkills" class="btn btn-primary" data-toggle="collapse" href="#collapse@(Model.Name)" role="button" aria-expanded="false" aria-controls="collapse@(Model.Name)">
                    Skills
                </a>
            </div>
        }
    }
</div>
@if (Model.Skills != null)
{
    if (Model.Skills.Count > 0)
    {
        <div class="row ml-3 mb-3 mt-2 mb-2">
            <div class="collapse" id="collapse@(Model.Name)">
                @for (int j = 0; j < Model.Skills.Count; ++j)
                {
                    <input hidden type="text" asp-for="@Model.Skills[j].Id" />
                    <input hidden type="text" asp-for="@Model.Skills[j].NpcAbilityId" />
                    <div class="row mb-1">
                        <div class="col-5">
                            <input type="text" asp-for="@Model.Skills[j].Name" readonly class="form-control-plaintext" />
                        </div>
                        <div class="col">
                            <input type="number" asp-for="@Model.Skills[j].Bonus" class="form-control">
                        </div>
                    </div>
                }
            </div>
        </div>
    }

}



