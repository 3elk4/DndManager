@model ItemVM

<div id="editorItem" class="row d-flex justify-content-between align-items-center pb-3 pt-3">
    <div class="col-3">
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="col-2">
        <input asp-for="@Model.Quantity" class="form-control" />
        <span asp-validation-for="@Model.Quantity" class="text-danger"></span>
    </div>
    <div class="col-2">
        <input asp-for="@Model.Weight" class="form-control" />
        <span asp-validation-for="@Model.Weight" class="text-danger"></span>
    </div>
    <div class="col-4">
        <textarea asp-for="@Model.Notes" class="form-control"></textarea>
        <span asp-validation-for="@Model.Notes" class="text-danger"></span>
    </div>
    <div class="col-1">
        <a class="deleteRow btn btn-primary" type="button" href="" data-value="/items/delete/@Model.Id" ><i class="fas fa-times"></i></a>
    </div>
    <div>
        <input type="hidden" value="@Model.Id" name="ItemId" id="ItemId" />
    </div>
</div>  